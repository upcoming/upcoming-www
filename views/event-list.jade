block includes
  script.
    $.getScript('/js/watchlists.js');

if results.length > 0
  - each result in results  
    .event.h-event
      .event-date
        if result.event.end_date
          = moment(result.event.start_date).twix(result.event.end_date, {allDay: true}).format({monthFormat: 'MMMM'})
          time.hidden.dt-start(datetime=moment(result.event.start_date).format('YYYY-MM-DD'))
          time.hidden.dt-end(datetime=moment(result.event.end_date).format('YYYY-MM-DD'))
        else
          time.dt-start(datetime=moment(result.event.start_date).format('YYYY-MM-DD'))= moment(result.event.start_date).format('MMMM D')
  
      .event-title
        a.p-name.u-url(href="/event/#{slug(result.event.title)}-#{result.event.event_id}") #{result.event.title}
        if result.venue
          small.event-venue
            |  at #{result.venue.name}
  
      .list-recommend
        a.u-author.h-card(href="/@" + result.user.username) #{result.user.name}
          img.img-rounded(alt=result.user.name, src="#{result.user.avatar_image_url}", style='float: left; margin-right: 10px; width: 48px; height: 48px;')
        h4
          a(href="/@" + result.user.username) #{result.user.name}
          small
            |  @#{result.user.username}
            
      .recommend-quote.e-description
        !=marked(truncate(result.event.description, 200))
  
      if user
        .recommend-action                  
          form.watchlist(action="/watchlist", method="post")
            div.form-group
              input.event_id(type="hidden", name="event_id", value="#{result.event.event_id}")
              div.btn-group(data-toggle="buttons", role="group")
                if result.watchlist.status == 'attend'
                  label.btn.btn-default.active
                    input.status(type="checkbox", name="status", value="attend", checked)
                    | ğŸ‘ I'm Going
                else
                  label.btn.btn-default
                    input.status(type="checkbox", name="status", value="attend")
                    | ğŸ‘ I'm Going
  
                if result.watchlist.status == 'watch'
                  label.btn.btn-default.active
                    input.status(type="checkbox", name="status", value="watch", checked)
                    | ğŸŒŸ Recommend
                else
                  label.btn.btn-default
                    input.status(type="checkbox", name="status", value="watch")
                    | ğŸŒŸ Recommend
else
  .event
    div No upcoming events! Want to <a href="/event/add">add one</a>?