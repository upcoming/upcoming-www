  body
    header
      block header
      
      nav.navbar.navbar-default.navbar-static-top(role='navigation')
        .container-fluid
          .navbar-header.pull-left
            a.navbar-brand(href='/')
              img(alt='Upcoming', src='/images/logo.png')
            ul.nav.navbar-nav.hidden-xs
              li
                a.navbar-link(href='/') Explore
              li
                a.navbar-link(href='/place') Places
          .navbar-header.pull-right
            ul.nav.navbar-nav.navbar-right
              li
                a.navbar-link(href='/event/add')
                  span.glyphicon.glyphicon-plus(aria-hidden="true")
                  |  Add
              if user
                li
                  a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', style='padding: 10px 20px 10px 20px')
                    if user.avatar_image_url
                      img.img-rounded(alt='', src="#{user.avatar_image_url}", width='30', height='30')
                    else
                      img.img-rounded(alt='', src="#{user.profile_image_url}", width='30', height='30')
                    span.caret
                  ul.dropdown-menu(role='menu')
                    li(role='presentation')
                      #{user.name}
                    li(role='presentation')
                      a(href="/@#{user.username}", role='menuitem') Your Profile
                    li(role='presentation')
                      a(href="/following", role='menuitem') Following
                    li(role='presentation')
                      a(href='/logout', role='menuitem') Logout
              else
                li
                  a.navbar-link(href='/login')
                    img(src='/images/twitter_logo.png', height="18px")
                    |  Sign In


